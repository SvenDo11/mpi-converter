{
  "name": "mpiconv",
  "displayName": "mpi-source-converter",
  "description": "A tool to help mpi developers to convert blocking operations with better perfoming ones.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mpiconv.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mpiconv.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "mpiconv.tellTime",
        "title": "What does the clock say?"
      },
      {
        "command": "mpiconv.replaceMe",
        "title": "Replace Me"
      },
      {
        "command": "mpiconv.convertToUnblocking",
        "title": "Convert MPI statements"
      }
    ],
    "configuration": {
      "title": "MPIConverter",
      "properties": {
        "mpiconv.confirmationstrings": {
          "type": "array",
          "default": ["yes", "ja", "y", "1"],
          "decription": "Set of strings that can be used as confirmation in the input dialog."
        },
        "mpiconv.decliningstrings": {
          "type": "array",
          "default": ["no", "nein", "n", "0"],
          "decription": "Set of strings that can be used as refusal in the input dialog."
        },
        "showFunctionDataRaceWarning": {
          "type":"boolean",
          "default": "true",
          "description": "Show an error message, whenever an potential datarace can be within some sub domain."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
